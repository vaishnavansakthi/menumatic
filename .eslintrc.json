{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",
    "semi": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["src/index.css"],
      "rules": {
        "no-unused-expressions": "off",
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-irregular-whitespace": "off"
      }
    }
  ]
}
